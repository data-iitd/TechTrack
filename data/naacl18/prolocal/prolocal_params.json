{
  "dataset_reader":{"type":"ProLocalDatasetReader"},
//  "train_data_path": "data/naacl18/prolocal/propara.run1.train.tsv",
//  "validation_data_path": "data/naacl18/prolocal/propara.run1.dev.tsv",
//  "test_data_path": "data/naacl18/prolocal/propara.run1.test.tsv",
  "train_data_path": "data/Inputs/prolocal_annotations__train.tsv",
  "validation_data_path": "data/Inputs/prolocal_annotations__dev.tsv",
  "test_data_path": "data/Inputs/prolocal_annotations__test.tsv",
  "evaluate_on_test": true,

    "model": {
    "type": "ProLocalModel",
    "text_field_embedder": {
      "tokens": {
        //"type": "embedding",
        "embedding_dim": 100,
        "pretrained_file": "data/glove.6B.100d.txt.gz",
        // Download glove embeddings file from https://nlp.stanford.edu/projects/glove/
        "trainable": true
      }
    },
    "seq2seq_encoder": {
      "type": "lstm",
      "bidirectional": true,
      "input_size": 102,
      "hidden_size": 50,
      "num_layers": 2,
      "dropout": 0.3
    }
  },
  "data_loader": {
    //"type": "bucket",
    //"sorting_keys": [["tokens", "num_tokens"]],
    "batch_size" : 32,
    "shuffle" : true
  },

  "trainer": {
    "num_epochs": 70,
    "grad_clipping": 1.0,
    "patience": 100,
    "validation_metric": "+type_True_F1", //"-loss",
    "cuda_device": 0,
    "optimizer": {
      "type": "adadelta",
      "rho": 0.9,
      "lr": 0.2
    }
  }
}
